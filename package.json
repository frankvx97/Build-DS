{
  "name": "build-ds",
  "version": "1.0.0",
  "description": "Build Design System - A comprehensive design system built with Style Dictionary, React, and Storybook",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./styles": "./dist/styles/index.css"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "dev": "vite",
    "build:tokens": "node config/build-tokens.js",
    "build": "npm run build:tokens && tsc && vite build",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "react": "^19.0.2",
    "react-dom": "^19.0.2"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.5.0",
    "@storybook/addon-interactions": "^8.5.0",
    "@storybook/addon-links": "^8.5.0",
    "@storybook/blocks": "^8.5.0",
    "@storybook/react": "^8.5.0",
    "@storybook/react-vite": "^8.5.0",
    "@storybook/test": "^8.5.0",
    "@tokens-studio/sd-transforms": "^2.0.1",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.6",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "eslint-plugin-storybook": "^0.12.0",
    "sass": "^1.83.4",
    "storybook": "^8.5.0",
    "style-dictionary": "^5.0.4",
    "typescript": "^5.9.3",
    "vite": "^6.0.7"
  },
  "keywords": [
    "design-system",
    "design-tokens",
    "style-dictionary",
    "react",
    "typescript",
    "storybook"
  ],
  "author": "",
  "license": "MIT"
}
